<div class="container">
  <div class="jumbotron">
    <h1>Burger Ordering</h1>
    <h3>Eat Da Burger</h3>
    <hr>
    <img src="../public/assets/images/burger.jpg" class="img-rounded" alt="Burger">
  </div>

  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <h3>Burgers Ordered</h3>
        <ul>
          {{#each burgers}}
          {{#unless devoured}}
          <li>
            {{burger_name}}
            <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
              Devoured
            </button>
          </li>
          {{/unless}}
          {{/each}}
        </ul>
      </div>
      <div class="col-sm-6"></div>
      <h3>Burgers devoured</h3>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
          {{burger_name}}
          <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}" disabled>
             Devoured
          </button>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
<br>

  <div class="row">

    <div class="col-sm-12">
      <h2>Order a Burger to add</h2>
      <form class="create-form center">

        <div class="form-group">
          <label for="burger">Burger Name:</label>
          <input type="text" id="burger" name="burger">
          <button type="submit" class="btn btn-primary">Add Burger</button>
        </div>

 
        <br>
        <div>Enter a burger you want to eat and click Submit button</div>
      </form>
    </div>
  </div>
</div>
</div>